{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Test Aurora MySQL DB Cluster creation",
  "Parameters": {
    "EnvName": {
      "Description": "Environment name prefix",
      "Type": "String",
      "Default": "Test"
    },
    "VpcCidr": {
      "Description": "VPC CIDR block",
      "Type": "String",
      "Default": "10.0.0.0/16"
    },
    "DBSubnet1CIDR": {
      "Description": "Database subnet 1 CIDR",
      "Type": "String",
      "Default": "10.0.1.0/24"
    },
    "DBSubnet2CIDR": {
      "Description": "Database subnet 2 CIDR",
      "Type": "String",
      "Default": "10.0.2.0/24"
    },
    "DBInstanceClass": {
      "Description": "Aurora MySQL instance class",
      "Type": "String",
      "Default": "db.t3.medium",
      "AllowedValues": ["db.t3.medium", "db.t3.large", "db.r5.large"]
    }
  },
  "Resources": {
    "VPC": {
      "Type": "AWS::EC2::VPC",
      "Properties": {
        "CidrBlock": {"Ref": "VpcCidr"},
        "EnableDnsHostnames": true,
        "EnableDnsSupport": true,
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub": "${EnvName}-Test-VPC"}
          }
        ]
      }
    },
    "DBSubnet1": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {"Ref": "VPC"},
        "CidrBlock": {"Ref": "DBSubnet1CIDR"},
        "AvailabilityZone": {"Fn::Select": [0, {"Fn::GetAZs": ""}]},
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub": "${EnvName}-Test-DB-1"}
          }
        ]
      }
    },
    "DBSubnet2": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "VpcId": {"Ref": "VPC"},
        "CidrBlock": {"Ref": "DBSubnet2CIDR"},
        "AvailabilityZone": {"Fn::Select": [1, {"Fn::GetAZs": ""}]},
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub": "${EnvName}-Test-DB-2"}
          }
        ]
      }
    },
    "DBSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Test Database Security Group",
        "VpcId": {"Ref": "VPC"},
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 3306,
            "ToPort": 3306,
            "CidrIp": {"Ref": "VpcCidr"}
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub": "${EnvName}-Test-DB-SG"}
          }
        ]
      }
    },
    "DBSubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "Test subnet group for Aurora MySQL",
        "SubnetIds": [
          {"Ref": "DBSubnet1"},
          {"Ref": "DBSubnet2"}
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub": "${EnvName}-Test-DB-SubnetGroup"}
          }
        ]
      }
    },
    "DBClusterParameterGroup": {
      "Type": "AWS::RDS::DBClusterParameterGroup",
      "Properties": {
        "Description": "Test Aurora MySQL 8.0 parameter group",
        "Family": "aurora-mysql8.0",
        "Parameters": {
          "time_zone": "US/Pacific"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub": "${EnvName}-Test-DB-ClusterParamGroup"}
          }
        ]
      }
    },
    "TestAuroraCluster": {
      "Type": "AWS::RDS::DBCluster",
      "Properties": {
        "Engine": "aurora-mysql",
        "EngineVersion": "8.0.mysql_aurora.3.02.0",
        "DBClusterParameterGroupName": {"Ref": "DBClusterParameterGroup"},
        "MasterUsername": "admin",
        "ManageMasterUserPassword": true,
        "DBSubnetGroupName": {"Ref": "DBSubnetGroup"},
        "VpcSecurityGroupIds": [
          {"Ref": "DBSecurityGroup"}
        ],
        "BackupRetentionPeriod": 1,
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub": "${EnvName}-Test-Aurora-Cluster"}
          }
        ]
      }
    },
    "TestAuroraInstance": {
      "Type": "AWS::RDS::DBInstance",
      "Properties": {
        "Engine": "aurora-mysql",
        "DBInstanceClass": {"Ref": "DBInstanceClass"},
        "DBClusterIdentifier": {"Ref": "TestAuroraCluster"},
        "PubliclyAccessible": false,
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Sub": "${EnvName}-Test-Aurora-Instance"}
          }
        ]
      }
    }
  },
  "Outputs": {
    "AuroraClusterEndpoint": {
      "Description": "Test Aurora MySQL Cluster Endpoint",
      "Value": {"Fn::GetAtt": ["TestAuroraCluster", "Endpoint.Address"]}
    },
    "AuroraClusterPort": {
      "Description": "Test Aurora MySQL Cluster Port",
      "Value": {"Fn::GetAtt": ["TestAuroraCluster", "Endpoint.Port"]}
    }
  }
}